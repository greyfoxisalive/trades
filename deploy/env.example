# Переменные окружения для Docker Compose
# Скопируйте этот файл в .env и заполните значения

# Окружение
NODE_ENV=production

# PostgreSQL
POSTGRES_USER=steam_trade
POSTGRES_PASSWORD=steam_trade_password
POSTGRES_DB=steam_trade
POSTGRES_PORT=5432

# API
API_PORT=3001
FRONTEND_URL=http://localhost:3000
SESSION_SECRET=change-this-secret-in-production-use-random-string
STEAM_API_KEY=your-steam-api-key-here
STEAM_RETURN_URL=http://localhost:3000/api/auth/steam/return

# Web
WEB_PORT=3000
VITE_API_URL=http://localhost:3001

# Nginx
NGINX_PORT=80
NGINX_SSL_PORT=443

# SSL Domain (для Let's Encrypt)
SSL_DOMAIN=dev.trades.anyapi.net
SSL_EMAIL=your-email@example.com
